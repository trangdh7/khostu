@model List<Webkho_20241021.Models.khotongs>
@{
    ViewData["Title"] = "Kho dự án";
    Layout = "~/Areas/Giamdoc/Views/Layout/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/CSS/Action.css" rel="stylesheet" />
    <link href="~/CSS/Kho.css" rel="stylesheet" />
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/Table.css" rel="stylesheet" />
    <link href="~/CSS/Tongkho.css" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <title>Kho dự án</title>
</head>
<body>
    <div class="warehouse-container">
        <!-- Header (có thể tái sử dụng nếu muốn đẹp) -->
        <div class="warehouse-header">
            <div class="header-content">
                <h1 class="header-title">
                    <i class='bx bx-briefcase'></i> Kho dự án
                </h1>
                <p class="header-subtitle">Danh sách quản lý vật tư theo dự án</p>
            </div>
        </div>
        <!-- Navigation Tabs -->
        <div class="warehouse-nav">
            <div class="nav-tabs">
                @{
                    var action = (string)ViewContext.RouteData.Values["action"];
                }
                <a href="/Giamdoc/Home/Tongkho" class="nav-tab @(action == "Tongkho" ? "active" : "")">
                    <i class='bx bx-store'></i> Tổng kho
                </a>
                <a href="/Giamdoc/Home/VatTuMoi" class="nav-tab @(action == "VatTuMoi" ? "active" : "")">
                    <i class='bx bx-package'></i> Kho nv mới
                </a>
                <a href="/Giamdoc/Home/KhoDuAn" class="nav-tab @(action == "KhoDuAn" ? "active" : "")">
                    <i class='bx bx-briefcase'></i> Kho dự án
                </a>
            </div>
            <div class="nav-search">
                <form method="get" action="/Giamdoc/Home/KhoDuAn" style="display:flex; align-items:center; gap:8px;">
                    <label for="duAn" style="font-weight:600;">Dự án:</label>
                    <select id="duAn" name="duAn">
                        <option value="">Tất cả</option>
                        @if (ViewBag.DuAnList != null)
                        {
                            foreach (var da in (IEnumerable<string>)ViewBag.DuAnList)
                            {
                                var isSelected = ((string)ViewBag.DuAn == da);
                                @if (isSelected)
                                {
                                    <option value="@da" selected="selected">@da</option>
                                }
                                else
                                {
                                    <option value="@da">@da</option>
                                }
                            }
                        }
                    </select>
                    <i class='bx bx-search'></i>
                    <input type="text" name="q" value="@ViewBag.Q" placeholder="Tìm kiếm vật tư..." />
                    <button type="submit" class="btn btn-primary">Lọc</button>
                </form>
            </div>
        </div>
        <!-- Main Content (giữ nguyên bảng như cũ) -->
        <div class="warehouse-content">
            <div class="table-section">
                <div class="table-header">
                    <h2>Danh sách vật tư dự án</h2>
                </div>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã vật tư</th>
                                <th>Tên vật tư</th>
                                <th>Mã kho</th>
                                <th>Hãng SX</th>
                                <th>Nhà cung cấp</th>
                                <th>Dự án</th>
                                <th>Số lượng</th>
                                <th>Đơn vị</th>
                                <th>Ngày nhập kho</th>
                                <th>Ngày bảo hành</th>
                                <th>Thời gian BH</th>
                                <th>Trạng thái</th>
                                <th>Loại cấp phát</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = 1 + ((((int?)ViewBag.Page ?? 1) - 1) * 20);
                            }
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td>@item.MaSanpham</td>
                                        <td>@item.TenSanpham</td>
                                        <td><strong>@item.Makho</strong></td>
                                        <td>@item.HangSX</td>
                                        <td>@item.NhaCC</td>
                                        <td>@item.DuAn</td>
                                        <td>@item.SL</td>
                                        <td>@item.DonVi</td>
                                        <td>@item.NgayNhapkho?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.NgayBaohanh?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.ThoiGianBH?.ToString("dd/MM/yyyy")</td>
                                        <td>@(item.SL > 0 ? "Tồn Kho" : "Hết Hàng")</td>
                                        <td>@item.LoaiCapPhat</td>
                                        
                                    </tr>
                                    stt++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="14">Không có dữ liệu.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="pagination">
                        @{
                            int totalPage = (int)(ViewBag.TotalPages ?? 1); int curr = (int)(ViewBag.Page ?? 1); var _q = (string)(ViewBag.Q ?? ""); var _qParam = string.IsNullOrEmpty(_q) ? "" : "&q=" + System.Net.WebUtility.UrlEncode(_q); var _du = (string)(ViewBag.DuAn ?? ""); var _duParam = string.IsNullOrEmpty(_du) ? "" : "&duAn=" + System.Net.WebUtility.UrlEncode(_du);
                        }
                        @if (totalPage > 1)
                        {
                            for (int i = 1; i <= totalPage; i++)
                            {
                                if (i == curr)
                                {
                                    <span class="active">@i</span>
                                }
                                else
                                {

                                    <a href="?page=@i@Html.Raw(_qParam)@Html.Raw(_duParam)">@i</a>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

