
@{
    ViewData["Title"] = "Phieunhapkho";
    Layout = "~/Areas/NhanvienKythuat/Views/Layout/Layout.cshtml";
}
@model Webkho_20241021.Areas.NhanvienKythuat.Data.Phieunhapkhoviewmodel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>yeucau</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <nav class="bodyyeucau">
        <div class="menu-kho">
            <ul class="timkiem">
                <li class="menu-yeucau">
                    <a href="/NhanvienKythuat/Yeucau/Yeucau">Chưa duyệt</a>
                    <span class="badge">
                        <span class="notification"></span>
                    </span>
                </li>
                <li class="menu-xuatkho">
                    <a href="/NhanvienKythuat/Yeucau/Phieuxuatkho">Phiếu xuất kho</a>
                    <span class="badge">
                        <span class="notification"></span>
                    </span>
                </li>
                <li class="menu-nhapkho">
                    <a href="/NhanvienKythuat/Yeucau/Phieunhapkho">Phiếu nhập kho</a>
                    <span class="badge">
                        <span class="notification"></span>
                    </span>
                </li>
                <li class="menu-muahang">
                    <a href="/NhanvienKythuat/Yeucau/Phieumuahang">Phiếu mua hàng</a>
                    <span class="badge">
                        <span class="notification"></span>
                    </span>
                </li>
            </ul>
            <ul>
                <input type="text" id="timkiem" name="Timkiem" placeholder="Tìm kiếm" />
            </ul>
        </div>

        <div class="Tableyeucau">
            <table class="table">
                <thead>
                    <tr>
                        <td>STT</td>
                        <td>Mã xuất kho</td>
                        <td>Mã yêu cầu</td>
                        <td>Mã dự án</td>
                        <td>Người yêu cầu</td>
                        <td>Ngày nhập kho</td>
                        <td>Trạng thái</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int STT = 1;
                    }
                    @foreach (var item in Model.Phieunhapkho)
                    {
                        string ChucvuSession = Context.Session.GetString("Chucvu");
                        string BophanSession = Context.Session.GetString("Bophan");
                        <tr>
                            <td>@STT</td>
                            <td>
                                <a href="javascript:void(0);" onclick="showVTnhapkho('@item.MaNhapkho')">
                                    @item.MaNhapkho
                                </a>
                            </td>
                            <td>@item.MaYeucau</td>
                            <td>@item.MaDuan</td>
                            <td>@item.MaNguoidung</td>
                            <td>@item.NgayNhapkho?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @{
                                    // Hiển thị trạng thái và nút duyệt theo quyền
                                    var duan = Model.Duans?.FirstOrDefault(d => d.MaDuan == item.MaDuan);
                                    var maQLDA = duan?.MaNguoiQLDA;
                                    var isQLDA = !string.IsNullOrEmpty(maQLDA) && maQLDA == Context.Session.GetString("MaNguoidung");
                                    var isGiamDoc = ChucvuSession == "Giám đốc";
                                    var isKho = BophanSession == "BP kho";
                                }
                                
                                @if (item.TrangThai == "Quản lí dự án" && isQLDA)
                                {
                                    @using (Html.BeginForm("Xuliphieunhapkho", "Yeucau", new { area = "NhanvienKythuat" }, FormMethod.Post))
                                    {
                                        <input type="hidden" name="MaNhapkho" value="@item.MaNhapkho" />
                                        <button type="submit" name="action" value="approve" class="btn-icon approve-btn" title="Duyệt">
                                            <i class="bx bxs-check-circle"></i>
                                        </button>
                                        <button type="submit" name="action" value="reject" class="btn-icon reject-btn" title="Từ chối">
                                            <i class="bx bxs-x-circle"></i>
                                        </button>
                                    }
                                }
                                else if (item.TrangThai == "Giám đốc" && isGiamDoc)
                                {
                                    @using (Html.BeginForm("Xuliphieunhapkho", "Yeucau", new { area = "NhanvienKythuat" }, FormMethod.Post))
                                    {
                                        <input type="hidden" name="MaNhapkho" value="@item.MaNhapkho" />
                                        <button type="submit" name="action" value="approve" class="btn-icon approve-btn" title="Duyệt">
                                            <i class="bx bxs-check-circle"></i>
                                        </button>
                                        <button type="submit" name="action" value="reject" class="btn-icon reject-btn" title="Từ chối">
                                            <i class="bx bxs-x-circle"></i>
                                        </button>
                                    }
                                }
                                else if (item.TrangThai == "Chờ nhập kho" && isKho)
                                {
                                    @using (Html.BeginForm("Xuliphieunhapkho", "Yeucau", new { area = "NhanvienKythuat" }, FormMethod.Post))
                                    {
                                        <input type="hidden" name="MaNhapkho" value="@item.MaNhapkho" />
                                        <button type="submit" name="action" value="approve" class="btn-icon approve-btn" title="Xác nhận nhập kho">
                                            <i class="bx bxs-check-circle"></i>
                                        </button>
                                    }
                                }
                                else
                                {
                                    <span>@item.TrangThai</span>
                                }
                            </td>
                        </tr>
                        STT++;
                    }
                </tbody>
            </table>
        </div>
        <div class="action">
            <ul class="hanhdong">
                <li>
                    <a href="/NhanvienKythuat/Yeucau/ThemPhieunhapkho">Thêm phiếu nhập kho</a>
                </li>
            </ul>
        </div>
    </nav>
    <nav class="bodyyeucau-thietbi">
        <div class="Tableyeucau-thietbi-box">
            <table class="tablethietbi">
                <thead>
                    <tr>
                        <td>STT</td>
                        <td>Tên vật tư</td>
                        <td>Mã vật tư</td>
                        <td>Mã kho</td>
                        <td>Hãng sx</td>
                        <td>Nhà cung cấp</td>
                        <td>Số lượng</td>
                        <td>Đơn vị</td>
                        <td>Trạng thái</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int ST = 1;
                    }
                    @foreach (var item in Model.VTphieunhapkho)
                    {
                        <tr>
                            <td>@ST</td>
                            <td>@item.TenSanpham</td>
                            <td>@item.MaSanpham</td>    
                            <td>@item.Makho</td>
                            <td>@item.HangSX</td>
                            <td>@item.NhaCC</td>
                            <td>@item.SL</td>
                            <td>@item.DonVi</td>
                        </tr>
                        ST++;
                    }
                </tbody>
            </table>
        </div>
    </nav>
    <script src="~/js/phieunhapkho.js"></script>
    <script>
        $(document).ready(function () {
            getThongbaoData();
        });
    </script>
</body>
</html>










